#!/bin/sh

if [ "$#" == 0 ] || [ $1 == 'auto' ]; then
    xrandr --output HDMI-0 --mode 2560x1440 --pos 0x0 --output DVI-I-1 --mode 1680x1050 --pos 2560x659 --output HDMI-0 --off && background
elif [ $1 == 'projector' ]; then
    xrandr --output DP-0 --mode 1280x800 --pos 0x0 --output DVI-D-0 --off --output HDMI-0 --mode 1280x960 --pos 0x0 \
        || xrandr --output DP-0 --off --output DVI-D-0 --off --output HDMI-0 --mode 1280x960 --pos 0x0
    background
elif [ $1 == 'tv' ]; then
    xrandr --output DP-0 --mode 2560x1440 --pos 0x0 --output DVI-D-0 --mode 1680x1050 --pos 2680x659 --output HDMI-0 --mode 1920x1080 --pos 2560x180 && background
elif [ $1 == 'old' ]; then
    xrandr --output DP-0 --mode 2560x1440 --pos 0x0 --output DVI-D-0 --mode 1680x1050 --pos 2560x659 --output HDMI-0 --off && background
fi
