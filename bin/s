#!/usr/bin/env bash

# Script to connect to a pre-defined list of ssh servers with minimal typing.

if (( "$#" != 1 )); then
    echo "Precisely one parameter required"
    exit 1
fi

cmd="ssh"

if [ $1 == "p" ]; then
    server="paho.asuscomm.com"
elif [ $1 == "c" ]; then
    server="10.0.0.5"
elif [ $1 == 'o' ]; then
    server="luriegrp@shell.onid.oregonstate.edu"
elif [ $1 == 'i' ]; then
    server="-q paho@openpower8.osuosl.org"

elif [ $1 == "q" ]; then
    server="quipu.physics.oregonstate.edu"
elif [ $1 == "k" ]; then
    server="kipu.physics.oregonstate.edu"

else
    server=$1
fi

exec $cmd $server
