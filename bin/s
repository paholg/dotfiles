#!/usr/bin/env bash

# Script to connect to a pre-defined list of ssh servers with minimal typing.

if (( "$#" != 1 )); then
    echo "Precisely one parameter required"
    exit 1
fi

cmd="ssh"

if [ $1 == "pi" ]; then
    server="pi@10.0.0.2"
elif [ $1 == "b" ]; then
    server="paho@10.0.0.4"
elif [ $1 == "q" ]; then
    server="quipu.physics.oregonstate.edu"
elif [ $1 == "k" ]; then
    server="kipu.physics.oregonstate.edu"

else
    server=$1
fi

exec $cmd $server
