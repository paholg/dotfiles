#!/usr/bin/env bash
set -euxo pipefail

function check_continue {
    read -rp "$1 (y/N) " yn
    if [ "$yn" != "y" ]; then
        exit 1
    fi
}

# TODO: Make pure
sudo nixos-rebuild --flake "$HOME/dotfiles" switch --impure

if test -f "hosts/$(hostname)/install"; then
    echo "Running hostname-specific install"

    . "hosts/$(hostname)/install"
fi
